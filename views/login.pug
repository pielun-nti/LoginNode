extends layout

block content
  h1= title
  p Welcome to #{title}

  if error
    p= error

  form(action="/login", method="post")
    div
      label(for="username") Username:
      input#username(type="text", name="username")
    div
      label(for="password") Password:
      input#password(type="password", name="password")

    button(type="submit") Login